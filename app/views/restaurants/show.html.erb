<div class="container mt-3">
  <h3><%= @restaurant.name %></h3>
  <p><%= @restaurant.address %></p>
  <%= link_to "Editar", edit_restaurant_path(@restaurant.id), class: "btn btn-warning btn-sm" %> <%= link_to "Eliminar", restaurant_path(@restaurant.id), data: {turbo_method: :delete, turbo_confirm: "Estas seguro/a que quieres borrar este restaurant?"} ,class: "btn btn-danger btn-sm" %> <%= link_to "Volver", restaurants_path, class:"btn btn-success btn-sm" %> <%= link_to "Crear plato", new_restaurant_dish_path(@restaurant.id), class:"btn btn-secondary btn-sm" %>
  <hr>
  <% @restaurant.dishes.each do |dish| %>
    <p><%= dish.name %> <%= dish.detail %> <%= dish.price %></p>
  <% end %>
</div>

