<div class="container shadow mt-3 p-3 w-50">
  <% if restaurant.new_record? %> ## Mira dentro del params si la key action = new da true
    <h5 class="text-center">Agregar restaurante</h5>
  <% else %>
    <h5 class="text-center">Editar restaurante</h5>
  <% end %>
  <%= simple_form_for restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.submit restaurant.new_record? ? "Crear" : "Actualizar", class:"btn btn-success"%>
      </div>
      <div class="col-2">  
         <%= link_to "Volver", restaurants_path, class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
