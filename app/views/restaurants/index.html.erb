<div class="container mt-3">
<div class="row">
  <div class="col">
    <%= link_to "Crear restaurant", new_restaurant_path, class:"btn btn-primary" %>
  </div>
</div>
<hr>
  <div class="row d-flex">
  <% @restaurants.each do |restaurant| %>
    <!-- Card de bootstrap-->
    <div class="col-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %> </h5>
          <p class="card-text"> <%= restaurant.address %></p>
          <%= link_to "Ver detalles", restaurant_path(restaurant.id), class:"btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

